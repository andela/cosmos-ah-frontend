{
	"root": true,
	"extends": ["airbnb-base"],
	"plugins": ["react"],
	"env": {
		"browser": true,
		"es6": true,
		"jest": true
	},
	"rules": {
		"one-var": 0,
		"one-var-declaration-per-line": 0,
		"new-cap": 0,
		"consistent-return": 0,
		"arrow-parens": ["error", "as-needed"],
		"no-param-reassign": 0,
		"comma-dangle": 0,
		"curly": ["error", "multi-line"],
		"no-unused-vars": 0,
		"class-methods-use-this": 0,
		"import/prefer-default-export": 0,
		"no-shadow": [
			"error",
			{
				"allow": ["req", "res", "err"]
			}
		]
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2017,
		"ecmaFeatures": {
			"jsx": true
		  }
	}
}
